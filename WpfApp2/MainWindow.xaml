<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="CS2 DLC Loader" Height="520" Width="481" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <DropShadowEffect x:Key="GlowEffect" 
                          BlurRadius="15" 
                          ShadowDepth="0" 
                          Color="#3EC6FF" 
                          Opacity="0.4"/>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0C12" Offset="0"/>
            <GradientStop Color="#12141C" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="PanelGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#15171E" Offset="0"/>
            <GradientStop Color="#1A1D26" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#3EC6FF" Offset="0"/>
            <GradientStop Color="#3E86FF" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="LoginGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A1D26" Offset="0"/>
            <GradientStop Color="#23273A" Offset="1"/>
        </LinearGradientBrush>
        <RadialGradientBrush x:Key="LoaderGlow" GradientOrigin="0.5,0.5" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
            <GradientStop Color="#3EC6FF" Offset="0.0"/>
            <GradientStop Color="#0A0C12" Offset="1.0"/>
        </RadialGradientBrush>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="0"
                                Effect="{StaticResource GlowEffect}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernInput" TargetType="Control">
            <Setter Property="Background" Value="#12141C"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2A2F3A"/>
            <Setter Property="Height" Value="38"/>
        </Style>
        <Style x:Key="ModernTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernInput}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox" BasedOn="{StaticResource ModernInput}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelGradient}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" 
                                    ShadowDepth="0" 
                                    Color="#000000" 
                                    Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LoaderCircle" TargetType="Ellipse">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Stroke" Value="{StaticResource ButtonGradient}"/>
            <Setter Property="StrokeThickness" Value="4"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                From="0" To="360" Duration="0:0:2"
                                RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernLoaderCircle" TargetType="Ellipse">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="StrokeThickness" Value="5"/>
            <Setter Property="Stroke">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3EC6FF" Offset="0"/>
                        <GradientStop Color="#3E86FF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="18" ShadowDepth="0" Color="#3EC6FF" Opacity="0.5"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                From="0" To="360" Duration="0:0:1.2"
                                RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        <!-- Обновленный стиль для кнопки закрытия -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#3EC6FF"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <TextBlock Text="×" 
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"
                                     Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Обновленный стиль для продукта -->
        <Style x:Key="ProductStyle" TargetType="Border">
            <Setter Property="Background" Value="#12141C"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="#1A1D26"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!-- Обновленный стиль для кнопки продукта -->
        <Style x:Key="ProductButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border Background="{StaticResource BackgroundGradient}" 
            CornerRadius="14"
            Effect="{StaticResource GlowEffect}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Заголовок окна -->
            <Border Grid.Row="0"
                    Background="Transparent" 
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Grid Margin="15,0">
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Left" 
                               VerticalAlignment="Center">
                        <TextBlock Text="CS2 " 
                                 Foreground="#3EC6FF" 
                                 FontWeight="Bold"
                                 FontSize="15"/>
                        <TextBlock Text="DLC" 
                                 Foreground="#FFFFFF" 
                                 FontWeight="Medium"
                                 FontSize="15"/>
                    </StackPanel>
                    <Button Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>
            <!-- Основной контент -->
            <Grid Grid.Row="1" Margin="15,5,15,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Левое меню -->
                <Border x:Name="SideMenu" 
                        Background="#181B23"
                        CornerRadius="10"
                        Margin="0,0,15,0"
                        Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Top" Margin="10,20,10,0">
                        <TextBlock Text="PRODUCTS"
                                 Foreground="#7A7D88"
                                 FontSize="12"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,15"/>
                        <Button x:Name="ProductSelector" 
                                Style="{StaticResource ProductButtonStyle}"
                                Click="ProductSelector_Click">
                            <Border x:Name="ProductBorder"
                                    Style="{StaticResource ProductStyle}">
                                <StackPanel>
                                    <Image Width="64" Height="64" Margin="0,0,0,10"
                                           Source="https://images.steamusercontent.com/ugc/2100423244611767189/6F986B9FF828497ABA084B7843927E55123B2FDA/?imw=128&amp;imh=128&amp;ima=fit&amp;impolicy=Letterbox&amp;imcolor=%23000000&amp;letterbox=true"/>
                                    <TextBlock Text="CS2 DLC"
                                             Foreground="#FFFFFF"
                                             FontWeight="SemiBold"
                                             FontSize="14"
                                             HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Button>
                    </StackPanel>
                </Border>
                <!-- Правый основной контент -->
                <Grid Grid.Column="1">
                    <!-- Login Panel: строго по центру -->
                    <Border x:Name="LoginPanel" 
                            Background="{StaticResource LoginGradient}"
                            CornerRadius="20"
                            Effect="{StaticResource GlowEffect}"
                            Padding="48"
                            Opacity="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" Margin="-123,-10,0,0" Height="460" Width="405">
                        <StackPanel>
                            <TextBlock Text="Welcome back" 
                                     Foreground="#FFFFFF"
                                     FontWeight="SemiBold"
                                     FontSize="26"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,7"/>
                            <TextBlock Text="Sign in to continue" 
                                     Foreground="#7A7D88"
                                     FontSize="16"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,28"/>
                            <TextBlock Text="LOGIN" 
                                     FontSize="13" 
                                     Foreground="#3EC6FF"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Left"
                                     Margin="0,0,0,8"/>
                            <TextBox x:Name="LoginTextBox" 
                                    Style="{StaticResource ModernTextBox}"
                                    FontSize="15"
                                    Margin="0,0,0,18"
                                    Height="40"
                                    VerticalContentAlignment="Center"
                                    Text="Username"/>
                            <TextBlock Text="PASSWORD" 
                                     FontSize="13"
                                     Foreground="#3EC6FF"
                                     FontWeight="SemiBold"
                                     HorizontalAlignment="Left"
                                     Margin="0,0,0,8"/>
                            <PasswordBox x:Name="PasswordBox" 
                                       Style="{StaticResource ModernPasswordBox}"
                                       FontSize="15"
                                       Margin="0,0,0,12"
                                       Height="40"
                                       VerticalContentAlignment="Center"
                                       Tag="Password"/>
                            <Button x:Name="LoginButton" 
                                    Content="Войти в аккаунт" 
                                    Style="{StaticResource ModernButton}"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    Click="LoginButton_Click" RenderTransformOrigin="0.492,-0.241"/>
                            <Label x:Name="LoginErrorLabel"
                                   Content=""
                                   Foreground="Red"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Visibility="Collapsed"
                                   Margin="0,0,0,12"/>
                        </StackPanel>
                    </Border>
                    <!-- Main Panel с обновленным дизайном -->
                    <Border x:Name="MainPanel" 
                            Style="{StaticResource PanelStyle}"
                            Padding="25"
                            Opacity="0" 
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <!-- Заголовок и описание -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                                <TextBlock Text="UPDATE LOG" 
                                         FontSize="18" 
                                         Foreground="#3EC6FF"
                                         FontWeight="Bold"
                                         HorizontalAlignment="Left"
                                         Margin="0,0,0,8"/>
                                <TextBlock Text="Latest changes and additions to CS2 DLC"
                                         Foreground="#7A7D88"
                                         FontSize="14"/>
                            </StackPanel>
                            <!-- Лог обновлений -->
                            <Border Grid.Row="1" 
                                    Background="#12141C"
                                    CornerRadius="8"
                                    Padding="15">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBox x:Name="LogTextBox"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="#FFFFFF"
                                            FontSize="13"
                                            TextWrapping="Wrap"
                                            IsReadOnly="True"
                                            VerticalAlignment="Top">
                                        <TextBox.Resources>
                                            <Style TargetType="{x:Type ScrollBar}">
                                                <Setter Property="Background" Value="#181B23"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </ScrollViewer>
                            </Border>
                            <!-- Кнопки -->
                            <StackPanel Grid.Row="2" 
                                      Orientation="Horizontal" 
                                      HorizontalAlignment="Right"
                                      Margin="0,15,0,0">
                                <Button x:Name="UpdateLogButton"
                                        Content="UPDATE" 
                                        Style="{StaticResource ModernButton}"
                                        Width="110"
                                        Background="#12141C"
                                        BorderBrush="#2A2F3A"
                                        BorderThickness="1"
                                        Margin="0,0,10,0"
                                        Click="UpdateLogButton_Click"/>
                                <Button x:Name="InjectButton"
                                        Content="INJECT" 
                                        Style="{StaticResource ModernButton}"
                                        Width="110"
                                        Click="InjectButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            <!-- Loading Panel теперь в корне Grid, перекрывает всё окно -->
            <Border x:Name="LoadingPanel" 
                    Style="{StaticResource PanelStyle}"
                    Padding="32"
                    Opacity="0" 
                    Visibility="Collapsed"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    CornerRadius="20"
                    Panel.ZIndex="100"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="2">
                <StackPanel>
                    <Ellipse Style="{StaticResource ModernLoaderCircle}" RenderTransformOrigin="0.5,0.5">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <TextBlock Text="LOADING" 
                             FontSize="20" 
                             FontWeight="Bold" 
                             Foreground="#3EC6FF" 
                             HorizontalAlignment="Center"
                             Margin="0,18,0,8"/>
                    <TextBlock Text="Please wait while we prepare everything" 
                             FontSize="15"
                             Foreground="#7A7D88"
                             HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
